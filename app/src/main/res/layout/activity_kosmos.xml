<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".kosmos.KosmosActivity">

    <TextView
        android:id="@+id/showwww"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/kkk_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:text="点击展示非全屏的日历"/>


    <FrameLayout
        android:id="@+id/kkk_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/kkk_ttt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onClick"
                android:text="点击打开年视图"/>

            <com.haibin.calendarview.CalendarView
                android:id="@+id/kkk_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:calendar_height="45dp"
                app:calendar_padding="10dp"
                app:current_day_lunar_text_color="#FF8400"
                app:current_day_text_color="#FF8400"
                app:current_month_lunar_text_color="#CFCFCF"
                app:current_month_text_color="#333333"
                app:day_text_size="14sp"
                app:lunar_text_size="10sp"
                app:max_year="2030"
                app:max_year_day="31"
                app:max_year_month="12"
                app:min_year="2000"
                app:min_year_day="1"
                app:min_year_month="1"
                app:month_view="com.haibin.calendarviewproject.custom.CustomMonthView"
                app:month_view_scrollable="true"
                app:month_view_show_mode="mode_only_current"
                app:other_month_text_color="#e1e1e1"
                app:select_mode="single_mode"
                app:selected_lunar_text_color="#128c4b"
                app:selected_text_color="#128c4b"
                app:selected_theme_color="#80cfcfcf"
                app:week_background="#fff"
                app:week_bar_height="40dp"
                app:week_bar_view="com.haibin.calendarviewproject.custom.CustomWeekBar"
                app:week_line_background="#00000000"
                app:week_line_margin="16dp"
                app:week_start_with="mon"
                app:week_text_size="12sp"
                app:week_view="com.haibin.calendarviewproject.custom.CustomWeekView"
                app:year_view_day_text_size="10sp"
                app:year_view_month_text_size="22sp"
                app:year_view_scrollable="true"
                app:year_view_week_height="0dp"
                app:year_view_week_text_color="#666666"
                app:year_view_week_text_size="10sp"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>